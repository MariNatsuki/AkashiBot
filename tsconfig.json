{
  "compilerOptions": {
    // add Bun type definitions
    "types": ["bun-types"],

    // enable latest features
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "allowJs": true,
    "esModuleInterop": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,

    "baseUrl": "./src",

    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js",
    "types/**/*.d.ts",
    "./config.json",
    "./src/locales/*.json",
    "./sounds/*.mp3",
    ".eslintrc.js"
  ],
  "exclude": [
    ".github",
    "dist",
  ]
}
