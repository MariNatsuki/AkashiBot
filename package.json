{
  "name": "evobot",
  "version": "1.0.0",
  "private": true,
  "description": "Akashi Bot",
  "repository": "github:MariNatsuki/AkashiBot",
  "author": "MariNatsuki <natsukimari6295@gmail.com>",
  "main": "src/index.ts",
  "scripts": {
    "build": "bun build --target=bun ./src/index.ts --outdir=./dist && bunx --bun ncp ./src/locales ./dist/locales",
    "generate:locales": "bun run src/scripts/translator.js ./src/locales en.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint --fix . --ext .ts",
    "prepare": "husky install",
    "start": "bun src/index.ts",
    "start:dev": "bun --watch src/index.ts",
    "start:prod": "bun run ./dist/index.js",
    "typecheck": "tsc --noEmit -p ./tsconfig.json"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false
    }
  },
  "dependencies": {
    "@discordjs/voice": "^0.16.0",
    "array-move": "^4.0.0",
    "chatgpt": "^5.2.5",
    "discord.js": "^14.13.0",
    "husky": "^8.0.3",
    "i18next": "^23.6.0",
    "i18next-fs-backend": "^2.2.0",
    "ioredis": "^5.3.2",
    "iso-639-1": "^3.1.0",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "pagination.djs": "^4.0.12",
    "string-progressbar": "^1.0.4",
    "translate": "^2.0.2",
    "winston": "^3.11.0",
    "youtube-sr": "~4.3.9"
  },
  "devDependencies": {
    "@types/i18n": "^0.13.8",
    "@types/lodash": "^4.14.200",
    "@types/node-fetch": "^2.6.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "bun-types": "^1.0.7",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "lint-staged": "^15.0.2",
    "ncp": "^2.0.0",
    "prettier": "^3.0.3"
  },
  "optionalDependencies": {
    "@discordjs/opus": "^0.9.0",
    "libsodium-wrappers": "^0.7.13",
    "opusscript": "^0.1.1",
    "sodium-native": "^4.0.4",
    "tweetnacl": "^1.0.3"
  },
  "engines": {
    "node": ">=16.11.0"
  }
}
